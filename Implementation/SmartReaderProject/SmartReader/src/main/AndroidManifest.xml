<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalsoft.smartreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="com.digitalsoft.smartreader.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.Channels"
            android:label="@string/title_activity_channels"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.AddChannel"
            android:label="@string/title_activity_add_channel"
            android:theme="@style/Dialog"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.EditChannel"
            android:label="@string/title_activity_edit_channel"
            android:theme="@style/Dialog"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.Domains"
            android:label="@string/title_activity_domains"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
        <activity
            android:name="com.digitalsoft.smartreader.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalsoft.smartreader.MainActivity" />
        </activity>
    </application>
</manifest>
